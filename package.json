{
  "name": "@uscreen.de/postal-mailer",
  "version": "0.6.12",
  "description": "Mailer engine using mjml templates to send mail via postal api or smtp",
  "main": "index.js",
  "repository": "git@gitlab.uscreen.net:uscreen/npm/postal-mailer.git",
  "author": "Marcus Spiegel <spiegel@uscreen.de>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --fix",
    "prepare": "husky install",
    "test": "tap test/**/*.test.js",
    "test:cov": "tap --coverage-report=html test/**/*.test.js",
    "test:ci": "tap --coverage-report=text-summary test/**/*.test.js"
  },
  "devDependencies": {
    "@uscreen.de/dev-service": "^0.11.19",
    "@uscreen.de/eslint-config-prettystandard-node": "^0.2.8",
    "deep-equal": "^2.0.5",
    "husky": ">=8.0.1",
    "lint-staged": ">=13.0.3",
    "mailhog": "^4.16.0",
    "nock": "^13.2.9",
    "tap": "^16.3.0"
  },
  "dependencies": {
    "@atech/postal": "^1.0.0",
    "env-schema": "^5.0.0",
    "globby": "^11.1.0",
    "handlebars": "^4.7.7",
    "html-to-text": "^8.2.1",
    "mjml": "^4.13.0",
    "nodemailer": "^6.7.8"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  },
  "services": [
    {
      "image": "mailhog/mailhog:latest",
      "ports": [
        "1025:1025",
        "8025:8025"
      ]
    }
  ]
}
